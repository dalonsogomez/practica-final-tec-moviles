<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:EmpresaTurismo"
             x:Class="EmpresaTurismo.MostrarRutas"
             Title="Mostrar Rutas">
    
    <Grid>
        <CollectionView x:Name="RutasListView"
                        SelectionMode="Single"
                        SelectionChanged="RutasListView_SelectionChanged">

            <CollectionView.ItemsLayout>
                <LinearItemsLayout Orientation="Vertical" ItemSpacing="5" />
            </CollectionView.ItemsLayout>

            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="local:Ruta">
                    <Border Stroke="LightGray" Padding="8" Margin="4">
                        <VerticalStackLayout Spacing="4">
                            <Label Text="{Binding Nombre}" 
                                   FontAttributes="Bold"
                                   TextColor="Green" 
                                   FontSize="16"/>
                            
                            <Label Text="{Binding Provincia}"
                                   FontSize="12"/>
                        </VerticalStackLayout>
                    </Border> 
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </Grid>
</ContentPage>