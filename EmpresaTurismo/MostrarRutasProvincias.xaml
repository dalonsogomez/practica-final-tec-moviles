<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EmpresaTurismo.MostrarRutasProvincias"
             Title="Mostrar Rutas Provincias">

    <VerticalStackLayout Padding="20" Spacing="15">
        <Label Text="Rutas de una provincia"
               FontSize="20"
               FontAttributes="Bold"
               HorizontalOptions="Center" />

        <Entry x:Name="ProvinciaEntry"
               Placeholder="Provincia (ej. Ávila, León, Burgos...)"
               Keyboard="Text" />

        <Button Text="Buscar rutas"
                BackgroundColor="#FF015308"
                TextColor="#FFFF9500"
                Clicked="BuscarRutas" />

        <Label x:Name="ResumenLabel"
               Text="No se ha realizado ninguna búsqueda."
               FontAttributes="Italic"
               HorizontalOptions="Center" />

        <ListView x:Name="RutasListView"
                  HeightRequest="300">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <HorizontalStackLayout Padding="5" Spacing="10">
                            <Label Text="{Binding Nombre}"
                                   FontAttributes="Bold"
                                   VerticalOptions="Center" />

                            <Label Text="{Binding DistanciaKm, StringFormat='{}{0} km'}"
                                   VerticalOptions="Center" />
                        </HorizontalStackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </VerticalStackLayout>
</ContentPage>